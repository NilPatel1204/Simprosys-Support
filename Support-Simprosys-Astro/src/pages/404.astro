---
import BackgroundImage from "../assets/img/404-background.svg";
import Icon from "../assets/img/404-icon.svg";
import favicon from "../assets/img/favicon.png";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Page not found</title>
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/style.css" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href={favicon.src} />

    <!-- External Fonts (Poppins) -->
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap"
      rel="stylesheet"
    />

    <style>
      @tailwind base;
      @tailwind components;
      @tailwind utilities;
    </style>
  </head>
  <body
    style={`
      background-image: url(${BackgroundImage.src});
      background-size: cover;
      background-position: center;
      height: 100vh;
      width: 100vw;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0;
    `}
  >
    <main class="space-y-10 md:space-y-15 xl:space-y-20 px-3">
      <div class="text-center flex flex-col items-center space-y-8">
        <h1 class="text-[#38444B] font-bold text-3xl ssm:text-3xl md:text-4xl xl:text-[58px] opacity-1">
          Uh oh! We can't seem to locate this page
        </h1>
        <img src={Icon.src} alt="404-icon" class="w-72 md:w-auto" />
      </div>
      <div class="space-y-4 md:space-y-5 text-center flex flex-col items-center">
        <h2 class="text-[#38444B] font-semibold text-2xl">Let's guide you back to the homepage</h2>
        <a
          href="/"
          class="text-base text-[#FFFFFF] py-2 px-3 bg-[#195279] rounded-lg"
          >Take me back</a
        >
      </div>
    </main>
  </body>
</html>
